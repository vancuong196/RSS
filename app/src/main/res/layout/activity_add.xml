<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddActivity">

    <EditText
        android:id="@+id/edtName"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_form.height"
        android:background="@drawable/border"
        android:layout_margin="@dimen/add_margin"
        android:hint="Rss name"
        android:paddingLeft="@dimen/add_padding.left"
        android:textSize="@dimen/add_text.size"
        android:inputType="text"
        />

    <EditText
        android:id="@+id/edtLink"
        android:layout_width="match_parent"
        android:layout_height="@dimen/add_form.height"
        android:background="@drawable/border"
        android:layout_margin="@dimen/add_margin"
        android:hint="Rss Link"
        android:paddingLeft="@dimen/add_padding.left"
        android:textSize="@dimen/add_text.size"
        android:inputType="textUri"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:layout_margin="@dimen/add_margin">
        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            android:layout_weight="1"
            android:textSize="@dimen/add_text.size" />
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textSize="@dimen/add_text.size"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>